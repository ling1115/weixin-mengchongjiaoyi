/**index.wxss**/
.mapbox{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 98rpx;
}
.map{
  width: 100%;
  height: 100%;
}
.tabs{
  display: flex;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 98rpx;
  background: #03bbd5;
}
.tabs view{
  flex: 1;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
}
.tabs view:nth-child(1){
  background: #ff9700;
}